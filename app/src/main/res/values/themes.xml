<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Raksha" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prim</item>
        <item name="colorPrimaryVariant">@color/prim</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sec</item>
        <item name="colorSecondaryVariant">@color/sec</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/prim</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="floating_image" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">
            @drawable/floating_image_button
        </item>
    </style>

    <style name="Theme.Raksha.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>

        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Raksha.AppWidgetContainer" parent="Theme.Raksha.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background color for the search bar -->
        <item name="android:background">@color/sec</item>
        <!-- Text color for the search bar -->
        <item name="android:editTextColor">@color/black</item>
        <!-- Other attributes you may want to customize -->
    </style>

</resources>